<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Turquoise"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/productType"
        app:title="@string/app_name"
        app:titleTextColor="@color/black" />
    <TextView
        android:id="@+id/productType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/total"
        android:layout_margin="10dp"
        android:textSize="26sp"
        android:hint="Product Type"
        android:gravity="center"
        ></TextView>
    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productType"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        android:layout_margin="10dp"
        android:gravity="right"
        android:textSize="26sp"
        android:hint="Total"
        ></TextView>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/total"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"
                tools:ignore="ButtonStyle"></Button>
            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btn_c"
                android:text="C"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>
            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:layout_margin="2dp"
                app:backgroundTint="@color/Turquoise"
                ></Button>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_buy"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rectangle"
        android:text="BUY"
        app:backgroundTint="@color/Turquoise"
        app:layout_constraintStart_toEndOf="@id/tableLayout"
        app:layout_constraintBottom_toBottomOf="@id/tableLayout"
        app:layout_constraintTop_toBottomOf="@id/total"></Button>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".60"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/qnty_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_buy"
        app:layout_constraintBottom_toTopOf="@id/list_view"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="26sp"
        android:hint="Quantity"
        ></TextView>

<ListView
    android:id="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/qnty_tv"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="10dp"
    ></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>