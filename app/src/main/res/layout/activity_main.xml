<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <!--  <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Turquoise"
        app:layout_constraintBottom_toTopOf="@id/productType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:title="@string/app_name"
        app:titleTextColor="@color/black" />-->

    <TextView
        android:id="@+id/product_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:hint="Product Type"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/total"
        app:layout_constraintEnd_toStartOf="@id/manager_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <Button
        android:id="@+id/manager_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manager"
        android:textSize="14sp"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@id/product_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/total"></Button>
    <TextView
        android:id="@+id/qnty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:hint="Quantity"
        android:textSize="26sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/product_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/total"
        ></TextView>

    <TextView
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:hint="Total"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toEndOf="@id/qnty_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_type"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toStartOf="@id/btn_buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/guideline5">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_1"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="1"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"
                tools:ignore="ButtonStyle"></Button>

            <Button
                android:id="@+id/btn_2"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="2"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_3"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="3"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_4"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="4"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_5"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="5"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_6"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="6"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="7"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_8"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="8"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_9"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="9"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_c"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="C"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

            <Button
                android:id="@+id/btn_0"
                android:layout_margin="1dp"
                android:background="@drawable/rectangle"
                android:text="0"
                android:textColor="@color/black"
                app:backgroundTint="@color/Turquoise"></Button>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:background="@drawable/rectangle"
        android:text="BUY"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@id/tableLayout"
        app:layout_constraintBottom_toBottomOf="@id/tableLayout"
        app:layout_constraintStart_toEndOf="@id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        ></Button>


    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline5"></ListView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />


</androidx.constraintlayout.widget.ConstraintLayout>